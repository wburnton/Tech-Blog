{{each posts as |post|}} 

    <div class="row mb-4 project"> 
        <div class="col-md-5"> 
            <div class="col-8">
                <h2>
                    <a class="text-uppercase" href="/post/{{post.id}}">{{post.title}}</a>
                </h2>
            </div> 

        </div>  

        <div class="col-4">
            <p class="text-right">Created by
            {{post.user.username}}
            on
            {{format_date post.date_created}}
            </p>
        </div> 
        <div class="container">
            <p class="text-center">
                {{post.description}}
            </p>
        </div>






    </div>